{
  "manifest_version": 2,
  "name": "KissAnime.to AutoPlay",
  "version": "1.0",
  "description": "Automatically plays the next Anime in the list without ever leaving fullscreen mode!",
  "author": "Matthew de Marillac",
  "icons": {
      "16": "icons/16.png",
      "32": "icons/32.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
   },
  "permissions": ["tabs", "activeTab"],
  "page_action": {
    "default_title": "KissAnime Autoplay"
    },
    "content_scripts": [
    {

      "matches": ["*://*.kissanime.to/*"],
      "js": ["jquery-1.7.1.min.js", "AutoPlay.js"]
    }
  ],
  "background": {
  "matches": [
        "*://*.kissanime.to/*"
    ],
    "scripts": ["bootstrap.js"],
    "persistent": false
  }
}
